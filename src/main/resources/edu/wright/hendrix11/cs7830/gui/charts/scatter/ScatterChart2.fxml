<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.ScatterChart?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<Tab closable="false" text="Percent Return Scatter Chart" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wright.hendrix11.cs7830.gui.charts.scatter.ScatterChart2Gui">
    <VBox alignment="CENTER">
    <HBox alignment="CENTER">
        <VBox fx:id="radioBox" alignment="CENTER_LEFT" spacing="10.0" />
        <ScatterChart fx:id="scatterChart" legendVisible="false" title="Percent Return">
            <xAxis>
                <NumberAxis label="Day of Year" />
            </xAxis>
            <yAxis>
                <NumberAxis label="Percent Change in Price" />
            </yAxis>
        </ScatterChart>
    </HBox>
    <Slider fx:id="weekSlider" blockIncrement="1" majorTickUnit="1" max="24" maxWidth="750.0" min="0" minorTickCount="0" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="24" />
    </VBox>
</Tab>
